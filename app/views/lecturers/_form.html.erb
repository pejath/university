<%= form_with(model: lecturer) do |form| %>
  <%= render 'shared/errors', resource: lecturer %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :department %>
    <%= form.select :department_id, @departments.map { |value| [value.name, value.id] } %>
  </div>

  <div class="field">
    <%= form.label :academic_degree %>
    <%= form.select :academic_degree, [1,2,3,4,5,''] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
