<p id="notice"><%= notice %></p>

<h1>Lecturers</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Department</th>
    <th>Academic Degree</th>
    <th>Subjects</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @lecturers.each do |lecturer| %>
    <tr>
      <td><%= lecturer.name %></td>
      <td><%= lecturer.department.name %></td>
      <td><%= lecturer.academic_degree %></td>
      <td><%= lecturer.subjects.map(&:name) %></td>
      <td><%= link_to 'Show', lecturer %></td>
      <td><%= link_to 'Edit', edit_lecturer_path(lecturer) %></td>
      <td><%= link_to 'Destroy', lecturer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lecturer', new_lecturer_path %>