<div class="d-flex justify-content-center align-items-center" style="margin-top: 8%;">
  <div class="card col-11 col-sm-6">
    <div class="card-body">
      <h2 class="card-title">Регистрация</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <label for="user_email">Почта</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <label for="user_password">Пароль</label>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> символов минимум)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label "Подтвердите пароль" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= f.label "Пригласительный код" %>
          <%= f.text_field :token, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
