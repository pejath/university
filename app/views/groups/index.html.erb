<div>
  <% if !@groups.empty? %>
    <%= link_to 'Create', new_group_path %>

    <table>
      <thead>
      <tr>
        <th>Department</th>
        <th>Specialization code</th>
        <th>Course</th>
        <th>Form of education</th>
        <th>Curator</th>
        <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
      <%= render @groups %>
      </tbody>
    </table>
  <% else %>
    <p>There is no such group or in group 0 students</p>
  <% end %>


</div>