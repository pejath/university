<p id="notice"><%= notice %></p>

<h1 style="padding-left: 45%">Subjects</h1>
<%= link_to 'New Subject', new_subject_path, style: "display: inline; padding-left: 35%"%>

<table class="table table-hover tableFixHead" style="padding-left: 40%; width: 30%; font-size: 150%">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

