<p id="notice"><%= notice %></p>

<h1 class="centeredCol">Lectures for group <%= params[:group_id] %></h1>

<table class="table-sm table-hover tableFixHead" style="width: 80%; font-size:150%">
  <thead>
    <tr>
      <th>Time</th>
      <th>Weekday</th>
      <th>Subject</th>
      <th>Lecturer</th>
      <th>Corpus</th>
      <th>Auditorium</th>
      <th>Lecturer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= lecture.lecture_time.formatted_time %></td>
        <td><%= lecture.weekday %></td>
        <td><%= lecture.subject.name %></td>
        <td><%= lecture.lecturer.name %></td>
        <td><%= lecture.corpus %></td>
        <td><%= lecture.auditorium %></td>
        <td><%= lecture.lecturer.name %></td>

        <td><%= link_to 'Show', [@group, lecture] %></td>
        <td><%= link_to 'Edit', edit_group_lecture_path(@group,lecture) %></td>
        <td><%= link_to 'Destroy', [@group, lecture], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

