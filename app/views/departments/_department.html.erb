<div class="container col-md-3 col-12 mx-4 my-4 item align-content-center" style="background: rgba(255, 255, 255, 0.48); height: 160px;">
  <%= link_to department, class:"link-dark link-underline-opacity-0" do %>
    <div class="container d-flex">
      <div class="container d-flex flex-column mx-auto my-1">
        <p class="mb-auto" style="font-size: 22px;"><%= department.name %></p>
        <p class="mb-auto" style="font-size: 16px;">Преподавателей: <%= department.lecturers&.count %></p>
        <p class="mb-auto" style="font-size: 16px;">Групп: <%= department.groups&.count %></p>
      </div>
    </div>
  <% end %>
  <% if current_user.is_admin? %>
    <div class="d-flex justify-content-center">
      <%= link_to 'Edit', edit_department_path(department) %> |
      <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Вы уверены?' } %>
    </div>
  <% end %>
</div>
