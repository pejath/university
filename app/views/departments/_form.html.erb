<div class="container d-flex justify-content-center">
  <div class="card">
    <div class="card-body">
      <%= form_with(model: @department) do |form| %>
        <%= render 'shared/errors', resource: @department %>

        <div class="form-group mb-3">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :name %>
          <%= form.select :department_type, Department::DEPARTMENT_TYPE, {}, class: "form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label 'Formation date' %>
          <%= form.date_select :formation_date, class: "form-control" %>
        </div>

        <div class="form-actions mt-3">
          <%= form.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
