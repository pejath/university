<p id="notice"><%= notice %></p>

<h1 class="centeredCol">Departments</h1>
<p style="padding-left: 15%"><%= link_to 'New Department', new_faculty_department_path %></p>
<table class="table table-hover tableFixHead" style="width: 70%;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Department Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.department_type %></td>
        <td><%= link_to 'Show', faculty_department_path(@faculty,department) %></td>
        <td><%= link_to 'Edit', edit_faculty_department_path(@faculty,department) %></td>
        <td><%= link_to 'Destroy', [@faculty,department], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

