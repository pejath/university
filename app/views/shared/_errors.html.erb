<% if resource.present? && resource.errors.any? %>
  <%= content_tag :div, class: 'alert alert-danger resource-errors', data: { resource_id: resource.id} do %>
    <h2><%= t('.header', count: resource.errors.count) %>:</h2>

    <ul>
      <% resource.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
